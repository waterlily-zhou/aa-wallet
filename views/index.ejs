<!DOCTYPE html>
<html>
<head>
  <title>AA Wallet - Standalone Test</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      background-color: #87bdf4 !important;
      font-family: Arial, sans-serif;
      padding: 20px;
      color: #2b2c34;
    }
    .container {
      background-color: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.2);
      margin-top: 30px;
    }
    .header {
      background-color: #6246ea;
      color: white;
      padding: 15px;
      margin: -20px -20px 20px -20px;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
      text-align: center;
    }
    .card {
      border: none;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }
    .card-header {
      background-color: #6246ea;
      color: white;
      border-top-left-radius: 8px !important;
      border-top-right-radius: 8px !important;
      font-weight: bold;
    }
    .wallet-address {
      background-color: #f8f9fa;
      padding: 10px;
      border-radius: 6px;
      font-family: monospace;
      word-break: break-all;
    }
    .btn-primary {
      background-color: #6246ea;
      border-color: #6246ea;
    }
    .btn-primary:hover {
      background-color: #5538d2;
      border-color: #5538d2;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>AA Wallet</h1>
      <p>Account Abstraction Wallet - Standalone Test</p>
    </div>
    
    <% if (typeof wallet !== 'undefined') { %>
      <div class="row mt-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <i class="fas fa-wallet me-2"></i> Wallet Information
            </div>
            <div class="card-body">
              <h5>Smart Account</h5>
              <div class="wallet-address mb-3">
                <%= wallet.address %>
              </div>
              
              <h6>Owner Account</h6>
              <div class="wallet-address mb-3">
                <%= wallet.ownerAddress %>
              </div>
              
              <div class="d-flex justify-content-between">
                <span>ETH Balance:</span>
                <span><%= wallet.ethBalance %> wei</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <i class="fas fa-address-book me-2"></i> Saved Addresses
            </div>
            <div class="card-body">
              <% if (typeof savedAddresses !== 'undefined' && savedAddresses.length > 0) { %>
                <% savedAddresses.forEach((address, index) => { %>
                  <div class="card mb-2">
                    <div class="card-body py-2">
                      <div><strong><%= address.name %></strong></div>
                      <div class="small text-muted"><%= address.address %></div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <p>No saved addresses.</p>
              <% } %>
              
              <button class="btn btn-primary w-100 mt-3">
                <i class="fas fa-plus me-2"></i> Add New Address
              </button>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i> No wallet data available.
      </div>
    <% } %>
    
    <div class="alert alert-success mt-4">
      <i class="fas fa-check-circle me-2"></i> This is a standalone page working correctly with the blue background!
    </div>

    <div class="mb-4">
      <label class="form-label">Gas Payment Method</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gasPayment" id="hybridGas" value="default" checked>
        <label class="form-check-label" for="hybridGas">
          <i class="fas fa-gift text-success me-1"></i> Try Sponsorship First (with USDC fallback)
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gasPayment" id="sponsoredGas" value="sponsored">
        <label class="form-check-label" for="sponsoredGas">
          <i class="fas fa-gift text-success me-1"></i> Sponsored Only (free, may be rejected)
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gasPayment" id="usdcGas" value="usdc">
        <label class="form-check-label" for="usdcGas">
          <i class="fas fa-money-bill me-1"></i> USDC Payment Only
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gasPayment" id="bundlerGas" value="bundler">
        <label class="form-check-label" for="bundlerGas">
          <i class="fas fa-box me-1"></i> Use Bundler Service
        </label>
        <div class="form-text text-muted ms-4">This option uses a bundler service with Pimlico's SDK implementation</div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 